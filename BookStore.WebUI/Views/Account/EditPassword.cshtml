@model BookStore.Domain.Entities.User
    <div class="panel">
        <div class="panel-heading">
            <h3>Редактирование профиля</h3>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @using (Html.BeginForm("EditPassword", "Account",
            FormMethod.Post))
        {
            <div class="panel-body">
                @Html.HiddenFor(m => m.UserId)
                <label>Текущий пароль:</label>
                <input class="form-control" id="oldPass" name="oldPass" type="text">
                <label>Новый пароль:</label>
                <input class="form-control" id="newPass" name="newPass" type="text">
            </div>
            <div class="panel-footer">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                @Html.ActionLink("Отменить изменения и вернуться к списку", "Index", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>